{
    "name": "pkboom/laravel-test-watcher",
    "description": "a test watcher",
    "keywords": [
        "pkboom",
        "test",
        "watcher"
    ],
    "homepage": "https://github.com/pkboom/laravel-test-watcher",
    "license": "MIT",
    "authors": [
        {
            "name": "Keunbae Park",
            "email": "ppotpo@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "clue/stdio-react": "^2.5",
        "illuminate/collections": "^8.75",
        "illuminate/console": "^8.53",
        "illuminate/support": "^8.75",
        "pkboom/file-watcher": "^0.2.0",
        "react/event-loop": "^1.1",
        "symfony/console": "^5.3",
        "symfony/finder": "^5.4"
    },
    "require-dev": {
        "orchestra/testbench": "^6.23",
        "phpunit/phpunit": "^9.5",
        "pkboom/test-creator": "^0.1.1"
    },
    "autoload": {
        "psr-4": {
            "Pkboom\\TestWatcher\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Pkboom\\TestWatcher\\TestWatcherServiceProvider"
            ]
        }
    }
}
